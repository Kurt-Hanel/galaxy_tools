<tool id="consensus" name="Consensus Sequence" version="0.1.0">
    <description>Generate a consensus sequence from a BAM file</description>
    <requirements>
          <requirement type="package" version="0.1">quasitools</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    
        ln -f -s '${input_bam.metadata.bam_index}' '${input_bam}.bai' &&
        quasitools consensus '$input_bam' '$ref_file' 

        #if $percentage:
            -p '$percentage'
        #end if

        #if $output_name:
            -o '$output_name'
        #end if

    ]]></command>
    <inputs>
        <param name="input_bam" type="data" format="bam" optional="false" label="Bam file" />
        <param name="ref_file" type="data" format="fasta" optional="false" label="Reference file" />
        <param name="percentage" type="integer" optional="true" label="Percentage" help="Percentage to include base in mixture."/>
        <param name="output_name" type="text" optional="true" label="Output name" default="output.vcf" help="Name of the output vcf file. Defaults to output.vcf."/>
    </inputs>
    <outputs>
        <data format="fasta" name="output" from_work_dir="$output_name" />
    </outputs>
    <tests>
        <test>
            <param name="input_bam" value="test.bam" />
            <param name="ref_file" value="SIVmac239M5SpXplasmid_reference_1269-10407.fasta" />
            <output name="output" file="output.fasta" />
        </test>
    </tests>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
    <citations>
    </citations>
</tool>
