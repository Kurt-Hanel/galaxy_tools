<tool id="consensus" name="Consensus Sequence" version="0.1.0">
    <description>Generate a consensus sequence from a BAM file</description>
    <requirements>
          <requirement type="package" version="0.2.2">quasitools</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    
        ln -f -s ${input_bam.metadata.bam_index} ${input_bam}.bai &&
        quasitools consensus $input_bam $ref_file  

        #if $percentage:
            -p $percentage 
        #end if

        -o $output

    ]]></command>
    <inputs>
        <param name="input_bam" type="data" format="bam" optional="false" label="Bam file" />
        <param name="ref_file" type="data" format="fasta" optional="false" label="Reference file" />
        <param name="percentage" type="integer" optional="true" default="100" value="100" label="Percentage" help="Percentage to include base in mixture. Defaults to 100."/>
    </inputs>
    <outputs>
        <data format="fasta" name="output" from_work_dir="output.fasta" />
    </outputs>
    <tests>
        <test>
            <param name="input_bam" value="align.bam" />
            <param name="ref_file" value="hxb2_pol.fas" />
            <output name="output" file="output.fasta" />
        </test>
    </tests>
    <help><![CDATA[

Consensus
=========

Generate a consensus sequence for a given BAM and reference file.

    ]]></help>
    <citations>
    </citations>
</tool>
